<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <constant name="struts.enable.DynamicMethodInvocation" value="true" />
    <constant name="struts.devMode" value="true" />

    <package name="default" namespace="/" extends="struts-default">
        <action name="regist" class="action.RegistAction" method="regist"/>
        <action name="sendIdentifyCode" class="action.RegistAction" method="sendIdentifyCode"/>
        <action name="login" class="action.LoginAction" method="login"/>
        <action name="doPostIcon" class="action.UserAction" method="doPostIcon"/>
        <action name="doStealPower" class="action.UserAction" method="doStealPower"/>
        <action name="doGetRank" class="action.UserAction" method="doGetRank"/>
        <action name="doGetFriendInfo" class="action.UserAction" method="doGetFriendInfo"/>
        <action name="doGetRecord" class="action.UserAction" method="doGetRecord"/>
    </package>
</struts>